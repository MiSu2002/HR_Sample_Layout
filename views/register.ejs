<%- include('header',{
    title:'Signup'
}); -%>
<body class="body5">

    <div id="preloader">
        <script>
          var loader = document.getElementById('preloader');
           window.addEventListener('load', function(){
            loader.style.display = 'none';
           });
        </script>
      </div>

      <nav class="nav1 navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid mt-1">
            <h3 class="brand ms-5" style="color: rgba(245, 245, 245, 0.788); font-size: 25px;">XyZ</h3>
            <ul class="navbar-nav ml-auto me-3">
                <li class="nav-item d-none d-lg-block">
                    <form action="/" method="post">
                        <a class="nav-link me-5" style="font-size: 15px;" href="/" onclick="parentNode.submit();">About</a>
                        <input type="hidden" name="mess" value="About"/>
                    </form>
                </li>
                <li class="nav-item d-none d-lg-block">
                  <form action="/career" method="post">
                      <a class="nav-link me-5" style="font-size: 15px;" href="/career" onclick="parentNode.submit();">Careers</a>
                      <input type="hidden" name="mess" value="Careers"/>
                  </form>
              </li>
                <li class="nav-item d-none d-lg-block">
                    <form action="/contact" method="post">
                    <a class="nav-link me-5" style="font-size: 15px;" href="/contact" onclick="parentNode.submit();">Contact Us</a>
                    <input type="hidden" name="mess" value="Contact"/>
                </form>
                </li>
          </ul>
          </div>
        </div>
      </nav>
      
        <section class="vh-90" style="opacity: 0.9;">
            
        <div class="container py-5 h-30">
          <div class="row justify-content-center align-items-center h-30">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Create Account</h3>
                  
                  <form method="post" action="/signup">

                    <% if(typeof msg != 'undefined'){ %>
                        <div class="success-msg"><%= msg %></div><% }
                        if(typeof error !== 'undefined'){ %>
                        <div class="err-msg"><%= error %></div><% } %>
      
                        <div class="form-outline mb-4">
                       <input type="text" class="form-control form-control-lg" name="_name" id="user_name"/>
                       <label class="form-label" for="user_name">Name</label>
                        </div>
      
                        <div class="form-outline mb-4">
                            <input type="email" class="form-control form-control-lg" name="_email" id="user_email"/>
                            <label for="user_email">Email</label>
                        </div>

      
                    <div class="form-outline mb-4">
                        <input type="password" class="form-control form-control-lg" name="_password" id="user_pass"/>
                        <label for="user_pass">Password</label>
                        </div>
      
                    <div class="pt-2">
                      <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                      <p class="mt-4" style="color: black; opacity: 0.9;">Already have an account?<a class="ms-2" href="/login">Sign In</a></p>
                    </div>
      
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

<%- include('footer'); -%>
        
       