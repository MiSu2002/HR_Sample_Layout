<%- include('header',{
    title:'Signup'
}); -%>
<body class="body5">

    <div id="preloader">
        <script>
          var loader = document.getElementById('preloader');
           window.addEventListener('load', function(){
            loader.style.display = 'none';
           });
        </script>
      </div>

      <nav class="navbar justify-content-end navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <h3 class="brand navbar-brand ms-2" style="color: rgba(245, 245, 245, 0.788); font-size: 30px;">XyZ</h3>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
    <li class="nav-item" style="list-style-type: none;">
      <a class="nav-link me-5" style="font-size: 15px; color: aliceblue;" href="/about" onclick="parentNode.submit();">About</a>
    </li>
    <li class="nav-item" style="list-style-type: none;">
      <a class="nav-link me-5" style="font-size: 15px; color: aliceblue;" href="/career" onclick="parentNode.submit();">Careers</a>
      </li>
      <li class="nav-item" style="list-style-type: none;">
        <a class="nav-link me-5" style="font-size: 15px; color: aliceblue;" href="/contact" onclick="parentNode.submit();">Contact Us</a>
      </li>
    </div>
    </div>
</nav>
      
        <section class="vh-90" style="opacity: 0.9;">
            
        <div class="container py-5 h-30">
          <div class="row justify-content-center align-items-center h-30">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Create Account</h3>
                  
                  <form method="post" action="/signup">

                    <% if(typeof msg != 'undefined'){ %>
                        <div class="success-msg"><%= msg %></div><% }
                        if(typeof error !== 'undefined'){ %>
                        <div class="err-msg"><%= error %></div><% } %>
      
                        <div class="form-outline mb-4">
                       <input type="text" class="form-control form-control-lg" name="_name" id="user_name"/>
                       <label class="form-label" for="user_name">Name</label>
                        </div>
      
                        <div class="form-outline mb-4">
                            <input type="email" class="form-control form-control-lg" name="_email" id="user_email"/>
                            <label for="user_email">Email</label>
                        </div>

      
                    <div class="form-outline mb-4">
                        <input type="password" class="form-control form-control-lg" name="_password" id="user_pass"/>
                        <label for="user_pass">Password</label>
                        </div>
      
                    <div class="pt-2">
                      <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                      <p class="mt-4" style="color: black; opacity: 0.9;">Already have an account?<a class="ms-2" href="/login">Sign In</a></p>
                    </div>
      
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

<%- include('footer'); -%>
        
       